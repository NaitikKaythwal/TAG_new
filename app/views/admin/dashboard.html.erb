<h1>Admin Dashboard</h1>
<% @semesters.each do |semester| %>
  <h2><%= semester.semester %> <%= semester.year %></h2>
  <table class="table">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <% unless user.admin? %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.admin? ? "Admin" : "User" %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% end %>

